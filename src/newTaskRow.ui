<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.4"/>
  <template class="WastepyperNewTaskRow" parent="AdwPreferencesRow">

    <child>
      <object class="GtkBox">
        <style>
          <class name="header" />
        </style>

        <child>
          <object class="GtkImage">
            <property name="icon-name">list-add-symbolic</property>
          </object>
        </child>

        <child>
          <object class="GtkEntry" id="titleEntry">
            <property name="hexpand">True</property>
            <property name="placeholder-text" translatable="yes">Add new taskâ€¦</property>
            <signal name="activate" handler="_onEntryActivatedCb" object="WastepyperNewTaskRow" swapped="no" />
            <style>
              <class name="flat" />
            </style>
          </object>
        </child>

      </object>
    </child>

  </template>
</interface>
