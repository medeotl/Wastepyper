{
    "id" : "com.github.medeotl.Wastepyper",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "wastepyper",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "wastepyper",
            "builddir" : true,
            "buildsystem" : "meson",
            "run-tests" : true,
            "sources" : [
                {
                    "type" : "dir",
                    "url" : ".."
                }
            ]
        }
    ]
}
